{
  "compilerOptions": {
    "allowJs": true,
    "target": "ES2020",
    "module": "ES6",
    "moduleResolution": "Node",
    "noEmit": true,
    "strict": true,
    "isolatedModules": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true
  },
  "include": ["src/**/*.ts", "src/*.ts", "src/**/*.vue", "src/*.vue"],
  "exclude": ["node_modules"]
}
